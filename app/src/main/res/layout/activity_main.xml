<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:columnCount="4"
    android:rowCount="120"

    >
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_columnWeight="4"
        android:layout_rowWeight="35"
        android:layout_row="0"
        android:text="0"
        android:gravity="right"
        android:layout_columnSpan="4"
        android:id="@+id/output"
        android:singleLine="true"
        android:background="@color/text"
        android:textColor="@android:color/black"
        android:textSize="50dp"
        />
    <TextView
        android:scrollHorizontally="true"
        android:id="@+id/input"
        android:layout_row="1"
        android:text="0"
        android:textColor="@android:color/black"
        android:textSize="50dp"
        android:gravity="right"
        android:background="@color/text"
        android:singleLine="true"

        android:layout_columnSpan="4"
        android:layout_columnWeight="4"
        android:layout_rowWeight="34"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"

        />
    <Button
        android:layout_row="2"
        android:layout_column="0"
        android:text="()"
        android:textSize="40dp"
        android:layout_rowWeight="10"
        android:layout_columnWeight="1"
        android:id="@+id/bchange"
        android:background="@color/buttton"


        />
    <Button
        android:layout_row="2"
        android:layout_column="1"
        android:text="cc"
        android:textSize="40dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:background="@color/buttton"
        android:id="@+id/bcc"
        />
    <Button
        android:layout_row="2"
        android:layout_column="2"
        android:text="R"
        android:textSize="40dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:id="@+id/bremove"
        android:background="@color/buttton"

        />

    <Button
        android:layout_row="2"
        android:layout_column="3"
        android:text="%"

        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/bmod"
        android:textSize="40dp"

        />

    <Button
        android:layout_row="3"
        android:layout_column="0"
        android:text="9"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/b9"


        />
    <Button
        android:layout_row="3"
        android:layout_column="1"
        android:text="8"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/b8"
        />
    <Button
        android:layout_row="3"
        android:layout_column="2"
        android:text="7"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/b7"

        />

    <Button
        android:layout_row="3"
        android:layout_column="3"
        android:text="/"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/bdiv"

        />
    <Button
        android:layout_row="4"
        android:layout_column="0"
        android:text="6"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="12"
        android:layout_width="wrap_content"
        android:id="@+id/b6"

        />
    <Button
        android:layout_row="4"
        android:layout_column="1"
        android:text="5"
        android:textSize="40dp"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/b5"
        android:background="@color/buttton"
        />
    <Button
        android:layout_row="4"
        android:layout_column="2"
        android:text="4"

        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/b4"

        />

    <Button
        android:layout_row="4"
        android:layout_column="3"
        android:text="*"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/bmul"

        />

    <Button
        android:layout_row="5"
        android:layout_column="0"
        android:text="3"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/b3"

        />
    <Button
        android:layout_row="5"
        android:layout_column="1"
        android:text="2"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/b2"
        />
    <Button
        android:layout_row="5"
        android:layout_column="2"
        android:text="1"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="12"
        android:layout_width="wrap_content"
        android:id="@+id/b1"

        />

    <Button
        android:layout_row="5"
        android:layout_column="3"
        android:text="+"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/bplus"

        />
    <Button
        android:layout_row="6"
        android:layout_column="0"
        android:text="."
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="12"
        android:layout_width="wrap_content"
        android:id="@+id/bpoint"

        />
    <Button
        android:layout_row="6"
        android:layout_column="1"
        android:text="0"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/b0"
        />
    <Button
        android:layout_row="6"
        android:layout_column="2"
        android:text="="
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/bequal"

        />

    <Button
        android:layout_row="6"
        android:layout_column="3"
        android:text="-"
        android:textSize="40dp"
        android:background="@color/buttton"
        android:layout_columnWeight="1"
        android:layout_rowWeight="10"
        android:layout_width="wrap_content"
        android:id="@+id/bsub"
        />

</GridLayout>